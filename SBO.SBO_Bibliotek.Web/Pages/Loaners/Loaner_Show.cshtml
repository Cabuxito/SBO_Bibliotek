@page
@model SBO.SBO_Bibliotek.Web.Pages.Loaners.Loaner_ShowModel
@{
}
<a class="btn btn-group-lg btn-dark" asp-page="/Books/Books_Create">New book</a>
<table class="table table-hover">

    <thead>
        <tr>
            <th scope="col">ISBN</th>
            <th scope="col">Title</th>
            <th scope="col">Publication</th>
            <th scope="col">Publisher</th>
            <th scope="col">Genre</th>
            <th scope="col">Author</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    @foreach (var item in Model.myLoaners)
    {
        <tbody>
            <tr>
                <th scope="row">@item.ISBN</th>
                <td>@item.LoanerFirstname</td>
                <td>@item.LoanerLastname</td>
                <td>@item.LoanerEmail</td>
                <td>@item.LoanerPhone</td>
                <td>@item.ISBN</td>
                <td><a class="btn btn-dark btn-group-sm" asp-route-UpdateISBN="@item.ISBN" asp-page="/Books/Books_Update">Edit</a></td>
                <td>
                    <form asp-page-handler="DeleteButton" asp-route-isbn="@item.ISBN" method="post">
                        <button type="submit" class="btn btn-warning btn-group-sm">Delete</button>
                    </form>
                </td>
            </tr>
        </tbody>
    }
</table>