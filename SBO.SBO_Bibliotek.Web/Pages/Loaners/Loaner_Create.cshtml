@page
@model SBO.SBO_Bibliotek.Web.Pages.Loaners.Loaner_CreateModel
@{
}
<h4 class="d-flex justify-content-center">ADD NEW LOANER</h4>
<div class="d-flex justify-content-center">
    <form action="" method="post" class="col-4">
        <div class="mb-3 ">
            <label class="form-label" for="BookISBN">Firstname:</label>
            <input type="number" id="BookISBN" class="form-control" asp-for="FirstName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Lastname:</label>
            <input type="text" class="form-control" asp-for="LastName" />
        </div>
        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input type="datetime" class="form-control" asp-for="Email"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Phone:</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>
        <div class="mb-3">
            <label class="form-label">Book ISBN:</label>
            <input type="text" class="form-control" asp-for="ISBN" required/>
        </div>
        <div class="d-flex justify-content-center ">
            <button type="submit" class="btn btn-dark m-1">Create</button>
            <a class="btn btn-dark m-1 " asp-page="/Loaners/Loaner_Create">Cancel</a>
        </div>
    </form>
</div>